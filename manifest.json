{
  "manifest_version": 3,
  "name": "AI Emotional Intelligence Assistant Language",
  "description": "AI Emotional Intelligence Assistant Language",
  "permissions": ["activeTab", "scripting", "storage", "<all_urls>"],
  "version": "1.0.0",
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    { "matches": ["<all_urls>"], "js": ["contentScript.js"] }
  ],
  "web_accessible_resources": [
    {
      "resources": ["*.html", "*.js", "*.css", "*.png", "*.svg"],
      "matches": ["<all_urls>"]
    }
  ]
}
